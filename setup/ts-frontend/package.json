{
    "name": "ts-frontend",
    "version": "1.0.0",
    "description": "a template for vanilla js in frontend with typescript and tests",
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testPathIgnorePatterns": [
            "<rootDir>/.cache/",
            "<rootDir>/node_modules/"
        ],
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    },
    "main": "app.js",
    "scripts": {
        "start": "tsc",
        "test": "jest --verbose",
        "test-watch": "jest --verbose --watchAll"
    },
    "author": "https://gitlab.com/franckf",
    "license": "ISC",
    "devDependencies": {
        "jest": "^26.6.3",
        "ts-jest": "^26.4.4",
        "typescript": "^4.0.5"
    }
}
